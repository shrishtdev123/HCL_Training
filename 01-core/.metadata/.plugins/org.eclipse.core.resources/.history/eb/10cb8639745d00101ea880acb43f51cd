package com.hcl.smallest;

public class test {
	
	  
	    public static void main(String[] args) {
			
	    	  int[] arr= {4,3,2,10,8,6};
	    	  int n=arr.length;
	    	  int max=0;
	    	  int first=0;
	    	  int second=0;
	    	  
	    	   for(int i=0;i<n-2;i++) {
	    		   
	    		     int ans=Math.abs(arr[i]-arr[i+2]);
	    		     max=Math.max(max, ans);
	    		     first=arr[i];
	    		     second=arr[i+2];
	    		   
	    	   }
	    	   
	    	   System.out.println(max+" "+first+" "+second);
		}

}



