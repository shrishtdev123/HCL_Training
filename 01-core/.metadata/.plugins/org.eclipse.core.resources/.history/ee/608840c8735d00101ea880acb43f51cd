package com.hcl.smallest;

public class test {
	
	  
	    public static void main(String[] args) {
			
	    	  int[] arr= {4,3,2,10,8,6};
	    	  int n=arr.length;
	    	  
	    	   for(int i=0;i<n-2;i++) {
	    		   
	    		     int ans=Math.abs(arr[i]-arr[i+2])
	    		   
	    		   System.out.println(ans);
	    	   }
		}

}



